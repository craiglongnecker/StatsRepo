@model dynamic

	<h1>Game Statistics</h1>

	<div class="table-responsive">
		<p><b>Visiting Team Statistics</b></p>
		<table class="table table-bordered">
			<tr>
				<th>Game ID</th>
				<th>Team ID</th>
				<th>Score</th>
				<th>First Downs</th>
				<th>Total Yards</th>
				<th>Rush Attempts</th>
				<th>Total Rushing Yards</th>
				<th>Passes Completed</th>
				<th>Passes Attempted</th>
				<th>Passes Intercepted</th>
				<th>Total Passing Yards</th>
				<th>Fumbles</th>
				<th>Fumbles Lost</th>
				<th>Number of Sacks</th>
				<th>Total Sack Yards Lost</th>
				<th>Number of Punts</th>
				<th>Average Yards Per Punt</th>
				<th>Number Of Penalties</th>
				<th>Total Penalty Yards</th>
			</tr>
			@foreach (var statistics in Model.Statistics)
			{
			<tr>
				<td>
					@statistics.Team1Id
				</td>
				<td>
					@statistics.Team
				</td>
				<td>
					@statistics.Team1TotalScore
				</td>
				<td>
					@statistics.Team1TotalFirstDowns
				</td>
				<td>
					@statistics.Team1TotalYards
				</td>
				<td>
					@statistics.Team1TotalRushes
				</td>
				<td>
					@statistics.Team1TotalRushingYards
				</td>
				<td>
					@statistics.Team1TotalPassesCompleted
				</td>
				<td>
					@statistics.Team1TotalPassesAttempted
				</td>
				<td>
					@statistics.Team1TotalPassesIntercepted
				</td>
