<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title Real Time Sports Statistics</title>

	<link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
	<link href="~/Content/bootstrap-grid.min.css.map" rel="stylesheet" type="text/css" />
	<link href="~/Content/bootstrap-grid.min.css" rel="stylesheet" type="text/css" />
	<link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
	<script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
	<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
		<a class="navbar-brand" href="@Url.Action("Index", "HomePage")">Real Time NFL Sports Statistics</a>
		<div>
			<ul class="navbar-nav">
				<li class="nav-item active">
					<a class="nav-link d-inline" href="@Url.Action("Index", "Home")">Home</a>
					<a class="nav-link d-inline" href="@Url.Action("Game", "Game")">Score a Game</a>
					<a class="nav-link d-inline" href="@Url.Action("Statistics", "Team")">Team Names and Colors</a>
					<a class="nav-link d-inline" href="@Url.Action("Statistics", "Statistics")">Game Statistics</a>
				</li>
			</ul>
		</div>
	</nav>

	<div class="container body-content">
		@RenderBody()
		<br />
		<footer style="bottom: 0;">
			<hr />
			<p>&copy; @DateTime.Now.Year Craig Longnecker, Kyle Nicholas, Mikaela Stanislav, Orlando Winters</p>
		</footer>
	</div>

	<script src="~/Scripts/jquery-3.3.1.min.js"></script>
	<script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>